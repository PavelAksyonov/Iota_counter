<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aksyonov.IotaCounter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.aksyonov.IotaCounter.Activity_start"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.aksyonov.IotaCounter.Activity_current_scores" />
        <activity
            android:name="com.aksyonov.IotaCounter.Activity_new_game"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.aksyonov.IotaCounter.Activity_top_score">

        </activity>
    </application>
    <uses-permission android:name="android.permission.VIBRATE"/>
</manifest>